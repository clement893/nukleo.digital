{
    "name":  "modele-nextjs-fullstack",
    "version":  "1.0.0",
    "description":  "Full-stack template with Next.js 16 frontend and FastAPI backend",
    "private":  true,
    "scripts":  {
                    "dev":  "turbo run dev --parallel",
                    "dev:full":  "node scripts/dev.js",
                    "dev:frontend":  "node scripts/dev.js --frontend-only",
                    "dev:backend":  "node scripts/dev.js --backend-only",
                    "build":  "turbo run build",
                    "build:web":  "turbo run build --filter=@modele/web",
                    "build:types":  "turbo run build --filter=@modele/types",
                    "build:clean":  "turbo run clean \u0026\u0026 pnpm build",
                    "build:optimized":  "node scripts/build-optimized.js",
                    "test":  "turbo run test --parallel",
                    "test:web":  "turbo run test --filter=@modele/web",
                    "test:backend":  "cd backend && pytest",
                    "test:backend:watch":  "cd backend && pytest-watch",
                    "test:backend:coverage":  "cd backend && pytest --cov=app --cov-report=html --cov-report=term",
                    "test:all":  "node scripts/run-tests.js",
                    "test:all:coverage":  "node scripts/run-tests.js --coverage",
                    "test:all:watch":  "node scripts/run-tests.js --frontend --watch",
                    "test:coverage":  "pnpm test:backend:coverage && pnpm test:web:coverage",
                    "test:web:coverage":  "turbo run test:coverage --filter=@modele/web",
                    "test:e2e":  "turbo run test:e2e --filter=@modele/web",
                    "lint":  "turbo run lint --parallel",
                    "lint:fix":  "turbo run lint --parallel -- --fix",
                    "format":  "turbo run format --parallel",
                    "format:check":  "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
                    "type-check":  "turbo run type-check --parallel",
                    "clean":  "turbo run clean \u0026\u0026 rm -rf node_modules/.cache .turbo",
                    "clean:all":  "turbo run clean \u0026\u0026 rm -rf node_modules .turbo apps/*/node_modules packages/*/node_modules",
                    "pre-commit":  "node scripts/pre-commit.js",
                    "pre-commit:skip-tests":  "node scripts/pre-commit.js --skip-tests",
                    "check":  "node scripts/check.js",
                    "check:fix":  "node scripts/check.js --fix",
                    "setup:hooks":  "node scripts/setup-hooks.js",
                    "generate":  "node scripts/generate/cli.js",
                    "generate:component":  "node scripts/generate-component.js",
                    "generate:page":  "node scripts/generate-page.js",
                    "generate:api":  "node scripts/generate-api-route.js",
                    "generate:types":  "node scripts/generate/types/generate_types.js",
                    "generate:types:fallback":  "node scripts/generate/types/generate_types_fallback.js",
                    "migrate":  "node scripts/migrate-db.js",
                    "seed":  "node scripts/seed-db.js",
                    "seed:extended":  "node scripts/seed-db.js --extended",
                    "analyze":  "cd apps/web \u0026\u0026 pnpm analyze",
                    "analyze:build":  "cd apps/web \u0026\u0026 pnpm analyze:build",
                    "workspace:upgrade":  "pnpm up -r -L",
                    "workspace:check":  "pnpm list --depth=0 -r",
                    "workspace:verify":  "node scripts/check-workspace.js",
                    "audit:security":  "node scripts/audit-security.js",
                    "audit:performance":  "node scripts/audit-performance.js",
                    "audit:all":  "npm run audit:security \u0026\u0026 npm run audit:performance",
                    "validate:env":  "node scripts/validate-env.js",
                    "validate:env:backend":  "node scripts/validate-env.js backend",
                    "validate:env:frontend":  "node scripts/validate-env.js frontend"
                },
    "workspaces":  [
                       "apps/*",
                       "backend",
                       "packages/*"
                   ],
    "devDependencies":  {
                            "turbo":  "^2.0.0",
                            "husky":  "^9.0.0",
                            "lint-staged":  "^15.0.0"
                        },
    "packageManager":  "pnpm@9.15.9"
}
